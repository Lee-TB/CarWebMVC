@model CarWebMVC.Models.VehicleLine

@{
    ViewData["Title"] = "Xóa dòng xe";
}

<div class="w-100">
    <h1>Xóa dòng xe</h1>

    <p>Dữ liệu đã xóa không thể phục hồi. Bạn có chắc chắn muốn xóa dòng xe này không?</p>
    <div>
        <hr />
        <dl class="row w-100">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Manufacturer.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Manufacturer.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.VehicleType.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.VehicleType.Name)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Xóa luôn" class="btn btn-danger" /> |
            <a asp-action="Index">
                Quay lại danh sách
            </a>
        </form>
    </div>

</div>
