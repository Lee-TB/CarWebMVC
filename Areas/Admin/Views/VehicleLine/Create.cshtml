@model CarWebMVC.Models.VehicleLine

@{
    ViewData["Title"] = "Thêm dòng xe";
}

<div class="w-100">
    <h1>Thêm dòng xe</h1>
    <hr />
    <div class="row w-100">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Manufacturer.Name" class="control-label"></label>
                    <select asp-for="ManufacturerId" class="form-control" asp-items="ViewBag.ManufacturerSelectItems">
                        <option value="">Chọn hãng xe</option>
                    </select>
                    <span asp-validation-for="ManufacturerId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="VehicleType.Name" class="control-label"></label>
                    <select asp-for="VehicleTypeId" class="form-control" asp-items="ViewBag.VehicleTypeSelectItems">
                        <option value="">Chọn kiểu dáng</option>
                    </select>
                    <span asp-validation-for="VehicleTypeId" class="text-danger"></span>
                </div>
                <div class="form-group mt-2 d-flex justify-content-end">
                    <input type="submit" value="Thêm" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">
            Quay lại danh sách
        </a>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
