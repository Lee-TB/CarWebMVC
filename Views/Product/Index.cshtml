@using CarWebMVC.Models.Domain
@using CarWebMVC.ViewComponents
@model IEnumerable<VehicleModel>


<h1>Danh sach san pham</h1>

@if(Model.Count() > 0)
{
    <div class="row">
        @foreach(var item in Model)
        {
            <div class="col-12 col-md-4 col-lg-3 d-flex justify-content-center">
                @await Component.InvokeAsync(typeof(ProductCardViewComponent), new {vehicleModel = item})
            </div>
        }
    </div>
}